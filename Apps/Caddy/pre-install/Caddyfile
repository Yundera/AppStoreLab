# Caddy configuration for static file serving
# Port 80: Internal access via NSL.SH routing (HTTPS handled by NSL)
# Port 443: External access for custom domains and direct IP with automatic TLS

{
    # Disable automatic HTTP->HTTPS redirects (NSL.SH handles HTTPS)
    auto_https disable_redirects
    # Default SNI for requests without hostname (e.g., direct IP access)
    default_sni localhost
}

# Internal access via NSL.SH - clean URLs like caddy-user.nsl.sh
:80 {
    root * /srv
    file_server

    # Enable gzip compression
    encode gzip

    # SPA support - try files then fall back to index.html
    try_files {path} /index.html

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        -Server
    }

    # Cache static assets
    @static {
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Deny access to hidden files
    @hidden {
        path */.*
    }
    respond @hidden 404

    log {
        output stdout
        format console
    }
}

# External access for custom domains and direct IP (IPv4/IPv6) with self-signed TLS
# Using https:// catch-all instead of :443 to properly handle IP-based access
# The :443 matcher fails on-demand TLS permission checks for direct IP requests
https:// {
    tls internal {
        on_demand
    }

    root * /srv
    file_server

    encode gzip

    try_files {path} /index.html

    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        -Server
    }

    @static {
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    @hidden {
        path */.*
    }
    respond @hidden 404

    log {
        output stdout
        format console
    }
}
